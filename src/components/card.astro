---
//Propsの受け渡し
interface Props {
    title: string;
    content: string;
}

const { title, content } = Astro.props;

//class名を変数で渡せる
const cardClassName = "card";
---

<>
    <div class={cardClassName}>
        <h1>{title}</h1>
        <p>{content}</p>
    </div>
</>

<!-- 追加されたstyleは自動的にスコープされて、他のコンポーネントに影響しない。 -->
<style>
    .card {
        margin-right: auto;
        margin-left: auto;
        height: 200px;
        width: 200px;
        background-color: #ffff00;
    }
    h1 {
        text-align: center;
        font-size: 25px;
    }
    p {
        text-align: center;
        font-size: 20px;
    }
</style>
